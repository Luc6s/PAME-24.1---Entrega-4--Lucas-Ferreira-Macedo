generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Ingrediente {
  id       Int @id @default(autoincrement())
  nome     String
  status   String
  cookie   Cookie[]
}

model Receita{
  id       Int @id @default(autoincrement())
  sabor    String
  cookie   Cookie[]
}
model Cookie {
  id              Int @id @default(autoincrement())
  estoque         Int
  validade        DateTime
  id_ingrediente  Int
  ingredientes Ingrediente @relation(fields: [id_ingrediente], references: [id])
  id_receita      Int
  receita         Receita   @relation(fields: [id_receita], references: [id])
}